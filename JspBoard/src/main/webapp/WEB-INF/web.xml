<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>JspBoard</display-name>
  
  <context-param>
  	<param-name>driverName</param-name>
  	<param-value>oracle.jdbc.driver.OracleDriver</param-value>
  </context-param>
  <context-param>
  	<param-name>jdbcUrl</param-name>
  	<param-value>jdbc:oracle:thin:@localhost:1521:XE</param-value>
  </context-param>
  <context-param>
  	<param-name>jdbcUser</param-name>
  	<param-value>hr</param-value>
  </context-param>
  <context-param>
  	<param-name>jdbcUserPassword</param-name>
  	<param-value>1234</param-value>
  </context-param>
  
  
  <listener>
  	<listener-class>jspboard.listener.ContextLoaderListener</listener-class>
  </listener>
  
  
  <filter>
  	<filter-name>encoding</filter-name>
  	<filter-class>jspboard.filter.CharacterEncodingFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>encoding</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
  
  
  <servlet-mapping>
  	<servlet-name>default</servlet-name>
  	<url-pattern>/resources/*</url-pattern>
  	<url-pattern>/favicon.ico</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>jsp</servlet-name>
  	<url-pattern>/WEB-INF/views/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>dispatcherServlet</servlet-name>
  		<!-- com(company).kd.jspboard~로 시작하는 편이다 -->
  	<servlet-class>jspboard.servlet.DispatcherServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>dispatcherServlet</servlet-name>
  	<url-pattern>*.jsp</url-pattern>
  	<url-pattern>*.jspx</url-pattern>
  	<url-pattern>/</url-pattern>
  </servlet-mapping>
  
  
</web-app>